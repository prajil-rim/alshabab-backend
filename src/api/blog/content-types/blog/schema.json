{
    "kind": "collectionType",
    "collectionName": "blogs",
    "info": {
        "singularName": "blog",
        "pluralName": "blogs",
        "displayName": "Blog",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "blog_title": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "blog": {
            "type": "blocks",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "author": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "profession": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "description": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "image": {
            "type": "component",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "elements.logo",
            "repeatable": false
        },
        "quote": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "socials": {
            "type": "component",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "elements.logo-link",
            "repeatable": true
        },
        "share_socials": {
            "type": "component",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "elements.logo-link",
            "repeatable": true
        },
        "slug": {
            "type": "uid",
            "targetField": "blog_title",
            "required": true
        },
        "blog_summary": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "hero": {
            "type": "component",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "blocks.blog-hero-section",
            "repeatable": false
        },
        "blog_category": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::blog-category.blog-category"
        },
        "footer_cta_section": {
            "type": "component",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "blocks.footer-cta-section",
            "repeatable": false
        },
        "recommended_blogs": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::blog.blog"
        },
        "seo": {
            "type": "component",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "shared.seo",
            "repeatable": false
        }
    }
}
